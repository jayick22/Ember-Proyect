<header class="m-2">
    <div class="container-fluid" id="home-nav-container">
        <div class="row" id="home-nav-row">
            <div class="col-12 d-flex align-items-center justify-content-center" id="home-nav-col">
                <nav class="navbar navbar-expand-lg shadow-sm rounded-3 w-100 px-3 navbar-custom" id="home-nav-navbar">
                  
                    <!-- Botón de menú en pantallas pequeñas -->
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#home-nav-navbar-collapse" 
                            aria-controls="home-nav-navbar-collapse" aria-expanded="false" aria-label="Toggle navigation" id="home-nav-toggler">
                        <span class="navbar-toggler-icon" id="home-nav-toggler-icon"></span>
                    </button>

                    <!-- Menú de navegación -->
                    <div class="collapse navbar-collapse justify-content-center" id="home-nav-navbar-collapse">
                        <ul class="navbar-nav fs-4" id="home-nav-list">
                            <li class="nav-item px-2 py-2" id="home-nav-item-about-us">
                                <LinkTo @route="Index" class="nav-link text-dark" id="home-nav-link-about-us">About Us</LinkTo>
                            </li>
                            <li class="nav-item px-2 py-2" id="home-nav-item-services">
                                <LinkTo @route="Services" class="nav-link text-dark" id="home-nav-link-services">Services</LinkTo>
                            </li>
                            <li class="nav-item px-2 py-2" id="home-nav-item-comments">
                                <LinkTo @route="Comments" class="nav-link text-dark" id="home-nav-link-comments">Comments</LinkTo>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>

<script>
    window.addEventListener('scroll', () => {
        const navbar = document.getElementById('home-nav-navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
</script>